<div class="page-header">
<h1>Todos los estados</h1>
</div>

<%=link_to "Agregar un Estado",new_estado_path,class:"btn btn-success"%>

<% @estados.each do |estado|%>
<div class="estado1">
<strong><%=estado.nombre%></strong>
<p><%=estado.contenido%></p>
<div class="metad">
<%=link_to time_ago_in_words(estado.created_at),estado%>
<span class="admin">
<%= link_to "Editar ",edit_estado_path(estado) %> |
<%= link_to "Eliminar", estado, method: :delete,data:{confirm:"Desea Eliminar"} %>
</span>

</div>

</div>



<%end%>